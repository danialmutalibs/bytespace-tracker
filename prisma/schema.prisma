generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Employee {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  activities Activity[]
}

model Activity {
  id          String   @id @default(uuid())
  employeeId  String
  checkIn     DateTime
  checkOut    DateTime?
  employee    Employee @relation(fields: [employeeId], references: [id])
  createdAt   DateTime @default(now())
}